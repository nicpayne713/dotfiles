#    MONITOR=$m polybar --reload mybar  --config=$HOME/.config/polybar/my-config &
#  done
#else
#  polybar --reload mybar --config=$HOME/.config/polybar/my-config &
#fi

polybar --reload mybar --config=$HOME/.config/polybar/my-config &
