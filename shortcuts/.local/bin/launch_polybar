#!/bin/bash

# Terminate already running bar instances
killall -q polybar

# Wait until the processes have been shut down
while pgrep -x polybar >/dev/null; do sleep 1; done

# Launch polybar
if type "xrandr"; then
  for m in $(xrandr --query | grep " connected" | cut -d" " -f1); do
    echo "$m"
    if [[ $m == *"eDP"* ]]; then
      echo "skipping laptop monitor"
    else
      MONITOR=$m polybar --reload $POLYBAR_BAR  --config=$HOME/.config/polybar/my-config &
    fi
  done
else
  polybar --reload $POLYBAR_BAR --config=$HOME/.config/polybar/my-config &
fi

#polybar --reload mybar --config=$HOME/.config/polybar/my-config &
